@model IEnumerable<Resturant.Web.Models.ProductDto>

<br/> <br/>
<div class="contianer p-4 boarder">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary"> List of Products</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus"></i>
            Create New Products</a>
        </div>
    </div>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Category Name
            </th>
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    @((item.Price).ToString("c"))
                </td>
                <td>
                    <img width="40px" src="@item.ImageUrl"/>
                </td>
                <td>
                    <a asp-action ="ProductEdit" class="btn btn-info" asp-route-prductId="@item.ProductId">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action ="DeleteProduct" class="btn btn-danger" asp-route-prductId="@item.ProductId">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>